---
import StarIcon from "../icons/star.astro";

interface Props {
  name: string;
  email: string;
  testimonial: string;
}

const { name, email, testimonial } = Astro.props;
---

<article
  class="bg-card border border-border rounded-md p-4 space-y-2 shadow-lg min-w-72"
>
  <header class="flex items-center gap-2">
    <img
      src="https://randomuser.me/api/portraits/men/31.jpg"
      alt="User image"
      class="rounded-full size-10"
    />

    <div>
      <p class="font-medium text-primary">{name}</p>
      <p class="text-muted-foreground text-sm">{email}</p>
    </div>
  </header>

  <p>
    {testimonial}
  </p>

  <div class="flex gap-1 ml-1">
    <StarIcon class="size-4 fill-orange-300 stroke-neutral-700" />
    <StarIcon class="size-4 fill-orange-300 stroke-neutral-700" />
    <StarIcon class="size-4 fill-orange-300 stroke-neutral-700" />
    <StarIcon class="size-4 fill-orange-300 stroke-neutral-700" />
    <StarIcon class="size-4 stroke-neutral-700" />
  </div>
</article>
